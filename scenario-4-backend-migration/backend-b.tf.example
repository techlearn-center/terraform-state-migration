# Backend B Configuration - LOCALSTACK
# =====================================
# This is the TARGET backend for LocalStack - migrate state here
#
# FOR REAL AWS: Use backend-b-aws.tf.example instead
#
# =====================================

# =====================================================
# RENAME THIS FILE TO backend-b.tf BEFORE MIGRATING!
# =====================================================
#
# Steps:
#   1. mv backend-a.tf backend-a.tf.bak
#   2. mv backend-b.tf.example backend-b.tf
#   3. terraform init -migrate-state
#   4. Answer "yes" when prompted
#   5. terraform plan (should show "No changes")
#
# =====================================================

terraform {
  backend "s3" {
    bucket = "tfstate-bucket-b"
    key    = "scenario-4/terraform.tfstate"
    region = "us-east-1"

    # LocalStack-specific settings
    endpoints = {
      s3 = "http://localhost:4566"
    }
    skip_credentials_validation = true
    skip_metadata_api_check     = true
    skip_requesting_account_id  = true
    use_path_style              = true
    access_key                  = "test"
    secret_key                  = "test"
  }
}
